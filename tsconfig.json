{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule":true,
  },
  "include": ["src/**/*", "__MOCKS__", "__tests__"],
  "exclude": ["node_modules", "cdk.out"]
}